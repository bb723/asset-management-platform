# Microsoft Authentication
# These credentials are shared across all Standard Management applications
MS_CLIENT_ID=your-azure-client-id
MS_CLIENT_SECRET=your-azure-client-secret
MS_TENANT_ID=your-azure-tenant-id

# Flask Configuration
# Generate a new secret key with: python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=your-secret-key-here
FLASK_ENV=development
REDIRECT_URI=http://localhost:5000/auth/callback

# Snowflake Configuration
# Same credentials as propertyops-pipeline
SNOWFLAKE_USER=your-snowflake-username
SNOWFLAKE_PASSWORD=your-snowflake-password
SNOWFLAKE_ACCOUNT=your-snowflake-account
SNOWFLAKE_WAREHOUSE=your-warehouse-name
SNOWFLAKE_DATABASE=your-database-name
SNOWFLAKE_ROLE=your-role-name
SNOWFLAKE_SCHEMA=PUBLIC

# File Storage
UPLOAD_FOLDER=./uploads
MAX_CONTENT_LENGTH=16777216  # 16MB max file size
